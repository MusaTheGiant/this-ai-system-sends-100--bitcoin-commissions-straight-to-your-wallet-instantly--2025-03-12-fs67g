    <!-- Scripts -->
    <script>
        // Auto-update the current year in footer
        document.getElementById('current-year').textContent = new Date().getFullYear();
        
        // Auto-update the publish date to current date
        document.addEventListener('DOMContentLoaded', function() {
            const today = new Date();
            const formattedDate = today.toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
            });
            const isoDate = today.toISOString().split('T')[0];
            
            // Only update if it's a placeholder (contains "PLACEHOLDER")
            const publishDateElement = document.getElementById('publish-date');
            if (publishDateElement && publishDateElement.textContent.includes('PLACEHOLDER')) {
                publishDateElement.textContent = formattedDate;
                publishDateElement.parentElement.querySelector('time').setAttribute('datetime', isoDate);
            }
            
            // Set the updated date to same as publish date if it's a placeholder
            const updatedDateElement = document.getElementById('updated-date');
            if (updatedDateElement && updatedDateElement.textContent.includes('PLACEHOLDER')) {
                updatedDateElement.textContent = formattedDate;
                updatedDateElement.parentElement.querySelector('time').setAttribute('datetime', isoDate);
            }
        });
        
        // Add dark mode toggle functionality if needed
        // This is just a sample toggle button implementation
        function toggleDarkMode() {
            document.body.classList.toggle('dark-mode');
            localStorage.setItem('darkMode', document.body.classList.contains('dark-mode'));
        }
        
        // Check for saved dark mode preference
        document.addEventListener('DOMContentLoaded', function() {
            if (localStorage.getItem('darkMode') === 'true' || 
                window.matchMedia('(prefers-color-scheme: dark)').matches) {
                document.body.classList.add('dark-mode');
            }
        });
    </script>
